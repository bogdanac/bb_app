<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background_battery"
    android:gravity="center">

    <!-- Top Row: Stats Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Battery Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”‹"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/battery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#4DFFFFFF" />

        <!-- Flow Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/flow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45/30"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#4DFFFFFF" />

        <!-- Streak Display -->
        <TextView
            android:id="@+id/streak_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ 5"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FF755D"
            android:visibility="visible" />

    </LinearLayout>

    <!-- Bottom Row: Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Battery Minus Button -->
        <Button
            android:id="@+id/button_battery_minus"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="48dp"
            android:text="âˆ’10%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FF5A81"
            android:background="@drawable/widget_button_battery_minus"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="8dp"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Battery Plus Button -->
        <Button
            android:id="@+id/button_battery_plus"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="48dp"
            android:text="+10%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:background="@drawable/widget_button_battery_plus"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="16dp"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Flow +1 Button -->
        <Button
            android:id="@+id/button_flow_plus_1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="40dp"
            android:text="+1pt"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#E33B95"
            android:background="@drawable/widget_button_flow"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="8dp"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Flow +2 Button -->
        <Button
            android:id="@+id/button_flow_plus_2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:minWidth="40dp"
            android:text="+2pts"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#E33B95"
            android:background="@drawable/widget_button_flow"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

</LinearLayout>
