<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background_battery">

    <!-- Top Row: Stats Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <!-- Battery Display -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš¡"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/battery_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Flow Display -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/flow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45/30"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Streak Display -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/streak_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ 5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#E65100"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Row: Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Battery Minus Button -->
        <Button
            android:id="@+id/button_battery_minus"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="âˆ’10%"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_battery_minus"
            android:layout_marginEnd="6dp"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Battery Plus Button -->
        <Button
            android:id="@+id/button_battery_plus"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="+10%"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_battery_plus"
            android:layout_marginEnd="10dp"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Flow +1 Button -->
        <Button
            android:id="@+id/button_flow_plus_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="+1pt"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_flow"
            android:layout_marginEnd="6dp"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Flow +2 Button -->
        <Button
            android:id="@+id/button_flow_plus_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="+2pts"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_flow"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

</LinearLayout>
