<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background"
    android:clickable="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_routine"
            android:layout_marginEnd="8dp"
            android:contentDescription="Routine Icon" />

        <TextView
            android:id="@+id/routine_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Morning Routine"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/routine_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/4"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:background="@drawable/progress_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- Current Step Container -->
    <LinearLayout
        android:id="@+id/step_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Current Step -->
        <TextView
            android:id="@+id/current_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="☀️ Stretch and breathe"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:background="@drawable/step_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/complete_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="✓ Complete"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="@drawable/complete_button_background"
                android:layout_marginEnd="8dp"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/skip_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="→ Skip"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/skip_button_background"
                android:layout_marginStart="8dp"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

    </LinearLayout>

    <!-- Completed Container -->
    <LinearLayout
        android:id="@+id/completed_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_check_circle"
            android:layout_marginBottom="8dp"
            android:contentDescription="Completed" />

        <TextView
            android:id="@+id/completed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All steps completed!"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>