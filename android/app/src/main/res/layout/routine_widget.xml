<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FF4CAF50"
    android:clickable="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_routine"
            android:layout_marginEnd="8dp"
            android:contentDescription="Routine Icon" />

        <TextView
            android:id="@+id/routine_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Morning Routine"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end" />


        <!-- Small Refresh Button -->
        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_popup_sync"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:contentDescription="Refresh"
            android:padding="2dp"
            android:alpha="0.5" />

    </LinearLayout>

    <!-- Current Step Container -->
    <LinearLayout
        android:id="@+id/step_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Current Step -->
        <TextView
            android:id="@+id/current_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="☀️ Stretch and breathe"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/step_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/skip_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="✕"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/skip_button_background"
                android:layout_marginEnd="4dp"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/postpone_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="↻"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/skip_button_background"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/complete_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="✓"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/complete_button_background"
                android:layout_marginStart="4dp"
                style="?android:attr/borderlessButtonStyle" />

        </LinearLayout>

    </LinearLayout>

    <!-- Completed Container -->
    <LinearLayout
        android:id="@+id/completed_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_check_circle"
            android:layout_marginBottom="8dp"
            android:contentDescription="Completed" />

        <TextView
            android:id="@+id/completed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All steps completed!"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>