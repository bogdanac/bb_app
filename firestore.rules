rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to prevent deletion (only allow create/update)
    function isNotDeleting() {
      return request.method != 'delete';
    }

    // Users collection - each user can only access their own data
    match /users/{userId} {
      // Allow read and update, but not delete
      allow read, update: if isOwner(userId);
      allow create: if isOwner(userId) && isNotDeleting();
      // Explicitly deny delete operations
      allow delete: if false;

      // Access logs subcollection
      match /access_log/{ipAddress} {
        allow read, write: if isOwner(userId);
      }

      // Security notifications subcollection
      match /security_notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }

      // Blocked IPs subcollection
      match /blocked_ips/{ipAddress} {
        allow read, write: if isOwner(userId);
      }
    }

    // Legacy backups collection - keep for old device-based backups
    // Will be deprecated - users should migrate to authenticated system
    match /backups/{deviceId} {
      allow read: if true;
      allow write: if true;
      allow delete: if false; // Prevent deletion
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
